root = true

[*]
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 4
charset = utf-8
trim_trailing_whitespace = true

[*.{yml,yaml}]
indent_size = 2

[*.md]
indent_size = 2

[*.json]
indent_size = 2

[*.{jsx,js,ts,tsx}]
indent_size = 2

[*.html]
indent_size = 2

[*.css,*.scss]
indent_size = 2
